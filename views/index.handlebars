
<img style="width: 150px;" src="/assets/img/cuteham.png" alt="hamburgers">
<h1 style="text-align: center;">Burgers!</h1>
<div class="row">
<ul class="left">
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
    {{/unless}}
  {{/each}}
</ul>
<div>
<ul class="right">
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eat=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<h2 style="text-align: center;">Make A Burger</h2>
<form class="create-form">

  <div class="form-group" style="text-align: center;">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button  style="text-align: center;" class="center" type="submit">Add Burger</button>
</form>
